<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:paddingStart="16dp"
        android:paddingTop="5dp"
        android:paddingEnd="16dp"
        android:paddingBottom="5dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/home_top_scan_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@mipmap/scan"
            android:textColor="@color/White"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/home_top_search_edit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toStartOf="@+id/home_top_search_image"
            android:layout_toEndOf="@+id/home_top_scan_image"
            android:textAlignment="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:enabled="false"
            android:hint="@string/home_top_search_tips"
            android:background="@drawable/share_edit_box" />

        <ImageView
            android:id="@+id/home_top_search_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/search" />
    </RelativeLayout>
    
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/home_top_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:tabMode="scrollable"
        android:background="@color/colorPrimary"
        app:tabIndicatorColor="@color/White"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="@color/White"
        app:tabTextColor="@color/White"
        android:textAlignment="center"
        android:layout_gravity="center"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/homeViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="首页"
        android:textAlignment="center" />

</LinearLayout>