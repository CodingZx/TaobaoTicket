<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:paddingStart="16dp"
        android:paddingTop="5dp"
        android:paddingEnd="16dp"
        android:paddingBottom="5dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/home_top_scan_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@mipmap/scan"
            android:textColor="@color/White"
            android:layout_alignBottom="@id/home_top_search_edit"
            android:layout_alignTop="@id/home_top_search_edit"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/home_top_search_edit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toStartOf="@+id/home_top_search_image"
            android:layout_toEndOf="@+id/home_top_scan_image"
            android:textAlignment="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:enabled="false"
            android:hint="@string/home_top_search_tips"
            android:background="@drawable/share_edit_box" />

        <ImageView
            android:id="@+id/home_top_search_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/home_top_search_edit"
            android:layout_alignTop="@id/home_top_search_edit"
            android:src="@mipmap/search" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/homeBaseContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>